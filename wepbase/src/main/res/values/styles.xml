<resources>

    <style name="AppThemeWep" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.AppBar.Normal" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.AppBar.PopUp" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="custom_title_theme" parent="android:Theme.Light">
        <item name="android:windowTitleSize">30dp</item>
        <item name="android:windowTitleBackgroundStyle">@drawable/title_bar</item>
        <!-- <item name="android:textColor">@android:color/black</item> -->
    </style>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="WepButtonWithMarigin" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/btn_marigin</item>
        <item name="android:layout_marginRight">@dimen/btn_marigin</item>
    </style>


    <style name="CheckBoxAppTheme">
        <item name="colorAccent">@color/colorGreyBackground</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/cadetblue</item>
    </style>

</resources>
