<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background"
    android:orientation="vertical"
    tools:ignore="HardcodedText,UselessParent" >

    <LinearLayout
        android:id="@+id/rowAuthorizationUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/activity_horizontal_margin1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin1"
        android:layout_marginRight="@dimen/activity_horizontal_margin1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin1"
            android:layout_weight="1.3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Supply Type"
                android:id="@+id/textView4" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/spnr_input_supplytype"
                android:entries="@array/g_s"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin1"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_new_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Item Name*"
                android:layout_weight="1.3"
                android:gravity="center"
                android:textColor="#000000"
                 />

            <EditText
                android:id="@+id/et_input_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin1"
                android:hint="enter item name"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1">

        </LinearLayout>

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin1"
        android:layout_marginRight="@dimen/activity_horizontal_margin1"
        android:layout_marginTop="@dimen/activity_horizontal_margin1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin1"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_new_item_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate*"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                 />

            <EditText
                android:id="@+id/et_input_rate"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/activity_horizontal_margin1"
                android:layout_height="wrap_content"
                android:hint="0.00"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin1"
                android:inputType="numberDecimal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_new_item_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty*"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="#000000"
                 />

            <EditText
                android:id="@+id/et_input_quantity"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="0.00"
                android:textSize="12dp"
                android:inputType="numberDecimal"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin1"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="UOM*"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/spnr_input_uom"
                android:entries="@array/UOM"></Spinner>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin1"
        android:layout_marginRight="@dimen/activity_horizontal_margin1"
        android:layout_marginTop="@dimen/activity_horizontal_margin1"
        android:layout_marginBottom="@dimen/activity_horizontal_margin1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin1"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sales Tax(%)"
                android:gravity="center"
                android:layout_weight="1.8"
                android:textColor="#000000"
                android:textSize="15dp"
                android:id="@+id/textView3" />

            <EditText
                android:id="@+id/et_input_salestax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:hint="0.00"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin1"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Service Tax(%)"
                android:textColor="#000000"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_input_servicetax"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin1"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="0.00"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"></LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin1"
        android:layout_marginRight="@dimen/activity_horizontal_margin1"
        android:layout_marginBottom="@dimen/activity_horizontal_margin1"
        android:text="*Please note % entered is taken upto 2 digits after decimal"
        android:textColor="@color/red"/>
</LinearLayout>