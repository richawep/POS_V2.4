<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen">

    <RelativeLayout
        android:id="@+id/boxContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <RelativeLayout
                    android:id="@+id/SaveGSTR1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/menu_box_marigin"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="DineIn"
                        android:padding="3dp"
                        android:src="@drawable/ic_download" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img1"
                        android:gravity="center"
                        android:text="Get GSTR3 Details"
                        android:textSize="@dimen/menu_box_font_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/menu_box_marigin"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="DineIn"
                        android:padding="3dp"
                        android:src="@drawable/ic_download" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img2"
                        android:gravity="center"
                        android:text="Save GSTR3 Details"
                        android:textSize="@dimen/menu_box_font_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/menu_box_marigin"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="DineIn"
                        android:padding="3dp"
                        android:src="@drawable/ic_upload" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img3"
                        android:gravity="center"
                        android:text="Upload GSTR1"
                        android:textSize="@dimen/menu_box_font_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/menu_box_marigin"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="DineIn"
                        android:padding="3dp"
                        android:src="@drawable/ic_download" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img4"
                        android:gravity="center"
                        android:text="Generate GSTR3 Details"
                        android:textSize="@dimen/menu_box_font_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/menu_box_marigin"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img10"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="DineIn"
                        android:padding="3dp"
                        android:src="@drawable/icon_file" />

                    <TextView
                        android:id="@+id/tv10"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img10"
                        android:gravity="center"
                        android:text="File GSTR3"
                        android:textSize="@dimen/menu_box_font_size" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>