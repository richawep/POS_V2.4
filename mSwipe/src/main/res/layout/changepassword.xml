<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_REL_content"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:paddingLeft="12dp" android:paddingRight="12dp" android:paddingBottom="12dp"
    android:background="#f5f5f5">
    <include android:id="@+id/top_bar"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            layout="@layout/top_bar_layout" />
    
    <RelativeLayout android:id="@+id/content"
        android:layout_width="400dp" android:layout_height="wrap_content"
        android:layout_marginTop="20dp" 
        android:layout_below="@+id/top_bar"
        android:background="#f5f5f5" >
        <ScrollView 
	            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:fadeScrollbars="false">
        	<LinearLayout android:id ="@+id/changepassword_REL_passworddetails"
        	    android:orientation="vertical"
			    android:layout_width ="fill_parent" android:layout_height = "wrap_content">
       			<LinearLayout 
			    	android:layout_width ="fill_parent" android:layout_height = "wrap_content" android:orientation="vertical"
			    	android:layout_marginBottom="7dp">
			 	<EditText android:id="@+id/changepassword_TXT_password"
				    android:layout_width="170dip" android:layout_height="40dp"
					android:layout_below="@+id/changepassword_LBL_password"
				    android:background="@drawable/edittext_modified_states"
					android:typeface="sans" android:hint="Password"
					android:gravity="center_vertical"
					android:paddingLeft="6dp"
				    android:inputType="textPassword"
				    android:maxLength="10" android:textSize="22dp">		   
				</EditText>
				</LinearLayout>

       			<LinearLayout 
			    	android:layout_width ="fill_parent" android:layout_height = "wrap_content" android:orientation="vertical"
			    	android:layout_marginBottom="7dp">			
		 		<EditText android:id="@+id/changepassword_TXT_newpassword"
				    android:layout_width="170dip" android:layout_height="40dp"
				    android:background="@drawable/edittext_modified_states"
					android:typeface="sans" android:hint="New Password"
					android:gravity="center_vertical"
					android:paddingLeft="6dp"
				    android:inputType="textPassword" 
				    android:maxLength="10" android:textSize="22dp">		   
				</EditText>
				</LinearLayout>
       			
       			<LinearLayout 
			    	android:layout_width ="fill_parent" android:layout_height = "wrap_content" android:orientation="vertical"
			    	android:layout_marginBottom="7dp">				
			 	<EditText android:id="@+id/changepassword_TXT_retypepassword"
				    android:layout_width="170dip" android:layout_height="40dp"
				    android:background="@drawable/edittext_modified_states"
					android:typeface="sans" android:hint="Retype Password"
					android:gravity="center_vertical"
					android:paddingLeft="6dp" 
				    android:inputType="textPassword"
				    android:maxLength="10" android:textSize="22dp">		   
				</EditText>
				</LinearLayout>
            	<LinearLayout
				    android:orientation="horizontal"
				    android:layout_width="fill_parent" android:layout_height="wrap_content"
				    android:gravity="center_horizontal" >
		    	
		    		 <Button android:id="@+id/changepassword_BTN_submit"
					    android:layout_width="100dp" android:layout_height="44dp"
					    android:layout_marginTop="10dp" 
						android:textColor="#ffffff"
						android:background="@drawable/roundrectblue" android:text="Submit"  android:gravity="center"
						android:textSize="25dp"/>
				</LinearLayout>
    		</LinearLayout>
    	</ScrollView>
    </RelativeLayout>
</RelativeLayout>
