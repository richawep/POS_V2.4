<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="#f2f2f2"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/topbar_LBL_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="35dp"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_bar"
        android:background="#f2f2f2" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" >

            <ViewFlipper
                android:id="@+id/creditsale_VFL_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <!-- the widgets for the the swiper -->

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:keepScreenOn="true" >

                    <TextView
                        android:id="@+id/creditsale_LBL_swipe_amtmsg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="15dp"
                        android:gravity="left"
                        android:singleLine="false"
                        android:text="Connect to Wisepad, and press Device-Info to view information about the device."
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:typeface="sans" />

                    <RelativeLayout
                        android:id="@+id/creditsale_LBL_swipe_steps"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/creditsale_LBL_swipe_amtmsg"
                        android:layout_marginBottom="10dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <LinearLayout
                            android:id="@+id/creditsale_LBL_swipe_steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/creditsale_LBL_swipe_step11"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:singleLine="false"
                                    android:text="EMV Ksn"
                                    android:textColor="#858382"
                                    android:textSize="18dp"
                                    android:typeface="sans" />

                                <TextView
                                    android:id="@+id/creditsale_LBL_swipe_step111"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:singleLine="false"
                                    android:text=":"
                                    android:textColor="#000000"
                                    android:textSize="20dp"
                                    android:typeface="sans" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/creditsale_LBL_swipe_step21"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:singleLine="false"
                                    android:text="Track Ksn"
                                    android:textColor="#858382"
                                    android:textSize="18dp"
                                    android:typeface="sans" />

                                <TextView
                                    android:id="@+id/creditsale_LBL_swipe_step211"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:singleLine="false"
                                    android:text=":"
                                    android:textColor="#000000"
                                    android:textSize="20dp"
                                    android:typeface="sans" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/creditsale_LBL_swipe_step31"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:singleLine="false"
                                    android:text="BatteryLevel"
                                    android:textColor="#858382"
                                    android:textSize="18dp"
                                    android:typeface="sans" />

                                <TextView
                                    android:id="@+id/creditsale_LBL_swipe_step311"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:singleLine="false"
                                    android:text=":"
                                    android:textColor="#000000"
                                    android:textSize="20dp"
                                    android:typeface="sans" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/creditsale_EDT_swipe_progmsg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/creditsale_LBL_swipe_steps"
                            android:layout_below="@+id/creditsale_LBL_swipe_steps"
                            android:layout_marginTop="10dp"
                            android:gravity="left|center_vertical"
                            android:lines="3"
                            android:singleLine="false"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:typeface="sans" >
                        </TextView>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/creditsale_LNR_swipebuttons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/creditsale_LBL_swipe_steps"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/creditsale_BTN_swipe"
                                android:layout_width="100dp"
                                android:layout_height="44dp"
                                android:background="@drawable/roundrectblue"
                                android:gravity="center"
                                android:text="Start"
                                android:textColor="#ffffff"
                                android:textSize="25dp"
                                android:typeface="sans" />

                            <Button
                                android:id="@+id/creditsale_BTN_swipe_mcr"
                                android:layout_width="100dp"
                                android:layout_height="44dp"
                                android:layout_marginLeft="3dp"
                                android:background="@drawable/roundrectblue"
                                android:gravity="center"
                                android:text="Start-Mag"
                                android:textColor="#ffffff"
                                android:textSize="25dp"
                                android:typeface="sans"
                                android:visibility="gone" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/creditsale_BTN_swipe_ok"
                            android:layout_width="100dp"
                            android:layout_height="44dp"
                            android:layout_below="@+id/creditsale_LBL_swipe_steps"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/roundrectblue"
                            android:gravity="center"
                            android:text="Stop"
                            android:textColor="#ffffff"
                            android:textSize="25dp"
                            android:typeface="sans"
                            android:visibility="invisible" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:keepScreenOn="true" >

                    <TextView
                        android:id="@+id/creditsale_LBL_swipe_amtmsg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:singleLine="false"
                        android:text="Total amount of this transaction \nis Rs. 99999.99"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:typeface="sans" />

                    <RelativeLayout
                        android:id="@+id/creditsale_LBL_swipe_steps"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/creditsale_LBL_swipe_amtmsg"
                        android:layout_marginBottom="10dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <LinearLayout
                            android:id="@+id/creditsale_LBL_swipe_steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/creditsale_LBL_swipe_step1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:singleLine="false"
                                android:text="Press start"
                                android:textColor="#000000"
                                android:textSize="22dp"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/creditsale_LBL_swipe_step2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:singleLine="false"
                                android:text="Press start"
                                android:textColor="#B0ACAE"
                                android:textSize="22dp"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/creditsale_LBL_swipe_step3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:singleLine="false"
                                android:text="Initializing the swiper"
                                android:textColor="#B0ACAE"
                                android:textSize="22dp"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/creditsale_LBL_swipe_step4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:singleLine="false"
                                android:text="Please swipe/insert Chip card"
                                android:textColor="#B0ACAE"
                                android:textSize="22dp"
                                android:typeface="sans" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </ViewFlipper>
            <!-- the widget for the bluetooth connection -->

            <RelativeLayout
                android:id="@+id/creditsale_REL_bluetooth"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="10dp"
                android:visibility="gone" >

                <ViewFlipper
                    android:id="@+id/creditsale_VFL_bluetoothsteps"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" >

                    <!--
                     <RelativeLayout
                         android:layout_width ="fill_parent" android:layout_height = "fill_parent">
                         <LinearLayout android:id="@+id/creditsale_LNR_bluetooth_btns"
                             android:orientation="vertical" android:background="@drawable/bluetooth1"
                             android:layout_width="fill_parent" android:layout_height="wrap_content"
                             android:gravity="center_horizontal">
                         </LinearLayout>
                     </RelativeLayout>
                     <RelativeLayout
                         android:layout_width ="fill_parent" android:layout_height = "fill_parent">
                         <LinearLayout android:id="@+id/creditsale_LNR_bluetooth_btns"
                             android:orientation="vertical"  android:background="@drawable/bluetooth2"
                             android:layout_width="fill_parent" android:layout_height="wrap_content"
                             android:gravity="center_horizontal">
                         </LinearLayout>
                     </RelativeLayout>
                     <RelativeLayout
                         android:layout_width ="fill_parent" android:layout_height = "fill_parent">
                         <LinearLayout android:id="@+id/creditsale_LNR_bluetooth_btns"
                             android:orientation="vertical"  android:background="@drawable/bluetooth3"
                             android:layout_width="fill_parent" android:layout_height="wrap_content"
                             android:gravity="center_horizontal">
                         </LinearLayout>
                     </RelativeLayout>
                    -->

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <ScrollView
                            android:id="@+id/creditsale_SCL_bluetoothsteps"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="80dp"
                            android:fadeScrollbars="false" >

                            <LinearLayout
                                android:id="@+id/creditsale_LNR_bluetooth"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="80dp"
                                android:orientation="vertical" >
                            </LinearLayout>
                        </ScrollView>

                        <LinearLayout
                            android:id="@+id/creditsale_LNR_bluetooth_btns"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/creditsale_SCL_bluetoothsteps"
                            android:layout_marginTop="-80dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/creditsale_LBL_bluetooth_progress"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:singleLine="true"
                                android:text="Press start..."
                                android:textColor="#0000ff"
                                android:textSize="18dp"
                                android:typeface="sans" />

                            <Button
                                android:id="@+id/creditsale_BTN_bluetooth_start"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:background="@drawable/roundrectblue"
                                android:gravity="center"
                                android:text="Start 1 pairing"
                                android:textColor="#ffffff"
                                android:textSize="25dp"
                                android:typeface="sans" />
                        </LinearLayout>
                    </RelativeLayout>
                </ViewFlipper>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>