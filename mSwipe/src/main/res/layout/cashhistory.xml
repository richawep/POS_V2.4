<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_REL_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <include
        android:id="@+id/top_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/top_bar_layout" />

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_bar"
        android:layout_centerHorizontal="true"
        android:background="#f2f2f2" >

        <RelativeLayout
            android:id="@+id/cardhistory_REL_cardhistory"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/cardhistory_LBL_recordcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:gravity="center_vertical"
                android:text="1 of  20"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="sans" >
            </TextView>

            <ScrollView
                android:id="@+id/cardhistory_SCL_cardhistory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardhistory_LBL_recordcount"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="6dp"
                android:scrollbars="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="3dp"
                        android:background="#FFFFFF" >

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblTxStatus"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_TxStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp"
                            android:typeface="sans" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF" >

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblTxDateTime"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Tx Date"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_TxDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp"
                            android:typeface="sans" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF" >

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblAmtRs"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/creditsale_LBL_Amtprefix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_AmtRs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF" >

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblTypeofTx"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_TypeofTx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF" >

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblMerchantInvoice"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Merchant Invoice"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_MerchantInvoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF" >

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblVoucherNo"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Voucher No."
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_VoucherNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lsttrxstatus_LNR_Cheque_No"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF" >

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblCheque_No"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Cheque No."
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_Cheque_No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/cardhistory_LNR_buttons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardhistory_SCL_cardhistory"
                android:layout_marginTop="-60dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/cardhistory_BTN_previous"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/roundrectblue"
                    android:gravity="center"
                    android:text="&lt;"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:typeface="sans" />

                <Button
                    android:id="@+id/cardhistory_BTN_next"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/roundrectblue"
                    android:gravity="center"
                    android:text=">"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:typeface="sans" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>